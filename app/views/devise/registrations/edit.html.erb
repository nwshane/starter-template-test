<% page_title t('shared.actions.with_obj.edit',
                obj: t('shared.common.account')) %>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :email, as: :email %>
    <%= f.input :password,
                as: :password,
                label: t('.password'),
                required: false,
                hint: "(#{t '.hints.leave_password_blank'})" %>
    <%= f.input :password_confirmation,
                as: :password,
                label: t('.password_confirmation'),
                required: false %>
    <%= f.input :current_password,
                as: :password,
                label: t('.current_password'),
                required: true,
                hint: "(#{t '.hints.current_password_required'})" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,
                 as: :input,
                 label: t('shared.actions.with_obj.update',
                          obj: t('shared.common.account')),
                 button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>

<p>
  <%= button_to t('shared.actions.with_obj.cancel',
                  obj: t('shared.common.account')),
                registration_path(resource_name),
                data: { confirm: t('shared.prompts.confirm') },
                method: :delete,
                class: 'btn btn-danger' %>
</p>
