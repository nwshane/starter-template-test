<% page_title t('shared.prompts.forgot_password') %>

<%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :email, as: :email %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,
                 label: t('.send_reset_password_instructions'),
                 button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>

<%= link_to t('shared.actions.log_in'),
    new_session_path(resource_name),
    class: 'btn btn-primary' %>
